{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "text",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "state": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "size_list": {
      "type": "json",
      "required": false
    },
    "description": {
      "type": "text"
    },
    "discounted_price": {
      "type": "integer",
      "default": 0
    },
    "is_discount_active": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "brand": {
      "type": "string",
      "required": false
    },
    "products": {
      "type": "json"
    },
    "isHot": {
      "type": "boolean",
      "default": false
    }
  }
}
